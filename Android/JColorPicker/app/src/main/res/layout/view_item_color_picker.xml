<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="80dp">

    <TextView
        android:id="@+id/itemColorPicker_tv_name"
        android:layout_width="wrap_content"
        android:textColor="#303030"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" android:layout_marginStart="25dp"
        android:text="Name" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/itemColorPicker_iv_indicator"
        android:layout_width="15dp"
        android:layout_height="15dp" android:layout_marginEnd="25dp"
        android:src="@drawable/ic_arrow_right_black" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>